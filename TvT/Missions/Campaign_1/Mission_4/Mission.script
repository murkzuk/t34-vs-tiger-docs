          fireEvent(0.0, [], "SetActive", []);
          sendEvent(0.0,  "CC1M4GermanVysochany_StugG40_Group",   "StartStug", []);
          if(VisObjStug==false)
          {
           SetObjectiveVisible(3, true);
           VisObjStug=true;
          }
        }
  /*  if(_ObjectID.IsStartsWith("German_Attack2_Tiger_2"))
    {
