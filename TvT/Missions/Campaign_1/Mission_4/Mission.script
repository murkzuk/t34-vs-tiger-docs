  void EndMission_PlayerRetreat()
  {
    if (GetObjectiveStatus(1) != MOSID_Completed)
      FailObjective(1);
    if (GetObjectiveStatus(2) != MOSID_Completed)
      FailObjective(2);
    if (GetObjectiveStatus(3) != MOSID_Completed)
      FailObjective(3);

    CompleteObjective(0);
  }

