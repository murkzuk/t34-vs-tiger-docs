    SetupAnimator(
        "MoveAnimLeft", new #MovementAnimator<CBtrM3A1HalftruckMovementLeftDrivingWheelAnimator>()
      );
    SetupAnimator(
        "MoveAnimRight", new #MovementAnimator<CBtrM3A1HalftruckMovementRightDrivingWheelAnimator>()
