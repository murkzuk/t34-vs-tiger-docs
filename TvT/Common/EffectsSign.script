//
//Track sign
//
class CT34TrackEffect
  extends CBaseTrackEffect
{
  float DeltaPath      = 2.0;  // каждые х метров, когда будет положен след
  float DeltaAngle     = 8.0;  // угол, при повороте на который будет положен след

  CT34TrackEffect()
  {
    CBaseTrackEffect(
        CEffectsArray::SignEffectsSkin,
        "T34TrackSign",
        new Color(1.0, 1.0, 1.0),
        0.63, // Size X
        0.27 // Size Y
      );
  }
}
