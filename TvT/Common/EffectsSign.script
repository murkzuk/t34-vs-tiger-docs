//Calibre bullet in ground
class CCalibre7576_85_88GroundSignEffect
  extends CBaseSignEffect
{
  CCalibre7576_85_88GroundSignEffect()
  {
    CBaseSignEffect(
        CEffectsArray::SignEffectsSkin,
        "CalibreGround",
        new Color(1.0, 1.0, 1.0),
        1.0, //Size
        2
      );
  }
}

