  float ReflectTextureShift      = 0.0;
  float WaterBorderScale         = 0.2;
  float WaterPenaBorderScale     = 20.0;
  float BorderOffset             = 0.0;
  float ClipPlaneShift           = 0.0;
  float AnimationSpeed           = 0.2;
