        Materials[i].TextureName   = _MainTexture;
        break;
      }
    }
  }

  // default materials
  Array Materials = [

      //
		      // Base terrain material
      //

      new CTerrainMaterial(
          "Terrain",                    // material id

          "Textures/lnd_micro_close.tex", // Noise

          [                             // 8 микро текстур

